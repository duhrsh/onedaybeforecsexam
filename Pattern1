/*
Code for this pattern for n lines if for n= 5 it is:
*****
*   *
*   *
*   *
*****
*/

#include <iostream>
using namespace std;

int main()
{

    int n;
    cout << "Enter value of n: ";
    cin >> n;

    for (int i = 1; i <= n; i++)
    {
        if (i == 1 || i == n)
        {
            for (int j = 1; j <= n; j++)
                cout << "*";
            cout << endl;  
            continue;
        }
        else {
            cout << "*" ;
            
            for (int j = 1; j <= n - 2; j++)
                cout << " ";

            cout << "*" << endl;
        }
        
    }
return 0;
}
